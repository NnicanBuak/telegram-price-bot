[run]
# Конфигурация для измерения покрытия кода

# Файлы для анализа
source = .

# Исключаемые файлы и директории
omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    setup.py
    */migrations/*
    */config/*

[report]
# Исключаемые строки из отчета
exclude_lines =
    # Стандартные pragma для исключения
    pragma: no cover
    
    # Отладочный код
    def __repr__
    if self.debug:
    if settings.DEBUG
    
    # Защитные конструкции
    raise AssertionError
    raise NotImplementedError
    
    # Код, который не выполняется
    if 0:
    if False:
    if __name__ == .__main__.:
    
    # Абстрактные методы
    @(abc\.)?abstractmethod
    
    # Типизация
    if TYPE_CHECKING:
    @overload
    
    # Логирование
    logger.debug
    logger.error
    
# Точность отображения процентов
precision = 2

# Пропускать покрытые файлы в отчете
skip_covered = False

# Показывать пропущенные строки
show_missing = True

[html]
# Директория для HTML отчета
directory = htmlcov

[xml]
# Файл для XML отчета
output = coverage.xml