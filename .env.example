# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Admin IDs (comma separated)
# Получить свой ID можно у бота @userinfobot
ADMIN_IDS=123456789,987654321

# Database Configuration
# Тип БД: sqlite или postgresql
DB_TYPE=sqlite

# Для SQLite
DB_PATH=bot_database.db

# Для PostgreSQL (раскомментируйте и заполните при использовании)
# DB_TYPE=postgresql
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=telegram_price_bot

# Logging
LOG_LEVEL=INFO

# Mailing Settings
MAILING_DELAY=0.1  # Задержка между сообщениями в секундах
BATCH_SIZE=30      # Количество сообщений в пакете