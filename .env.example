# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Admin IDs (comma separated)
# Получить свой ID можно у бота @userinfobot
ADMIN_IDS=123456789,987654321

# SQLite Database Configuration
DB_PATH=bot_database.db
DB_ECHO=false

# Application Settings
DEBUG=false
ENVIRONMENT=development
TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Mailing Settings
MAILING_DELAY=0.1         # Задержка между сообщениями в секундах
MAILING_BATCH_SIZE=30     # Количество сообщений в пакете
MAILING_MAX_RETRIES=3     # Максимальное количество попыток
MAILING_RETRY_DELAY=1.0   # Задержка между попытками в секундах

# Bot Behavior
PARSE_MODE=HTML