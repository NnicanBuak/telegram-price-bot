# ========================================
# ОСНОВНЫЕ НАСТРОЙКИ (ОБЯЗАТЕЛЬНЫЕ)
# ========================================

# Токен бота от @BotFather
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# ID администраторов (через запятую)
# Получить ID можно у @userinfobot
ADMIN_IDS=123456789,987654321

# ========================================
# БАЗА ДАННЫХ
# ========================================

# Путь к базе данных SQLite
DB_PATH=db/bot_database.db

# Логирование SQL запросов (true/false)
DB_ECHO=false

# ========================================
# ОКРУЖЕНИЕ
# ========================================

# Тип окружения (development/production/testing)
ENVIRONMENT=development

# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# ========================================
# НАСТРОЙКИ РАССЫЛКИ
# ========================================

# Задержка между сообщениями в секундах
MAILING_DELAY=0.1

# Количество сообщений в пакете
MAILING_BATCH_SIZE=30

# Максимальное количество попыток
MAILING_MAX_RETRIES=3

# Задержка между попытками в секундах
MAILING_RETRY_DELAY=1.0

# ========================================
# ТЕСТОВЫЕ ПЕРЕМЕННЫЕ (опционально)
# Используются ВМЕСТО основных если указаны
# ========================================

# Тестовый токен (используется вместо BOT_TOKEN если указан)
TEST_BOT_TOKEN=

# Тестовые администраторы (используются вместо ADMIN_IDS если указаны)
TEST_ADMIN_IDS=

# Тестовые группы
TEST_GROUP_IDS=

# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (опционально)
# ========================================

# Режим парсинга сообщений
PARSE_MODE=MarkdownV2

# Таймаут HTTP запросов в секундах
HTTP_TIMEOUT=30

# Файл для логов (пустое значение = консоль)
LOG_FILE=

# Уведомления о запуске
SEND_STARTUP_NOTIFICATIONS=false

# Автоматическое резервное копирование
AUTO_BACKUP=false